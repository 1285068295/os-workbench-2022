    "version": "0.2.0",
    "configurations": [
        {
            "name": "libco", //名称随便取
            "type": "cppdbg", //调试类型 （java python 用别的类型 具体值没查）
            "request": "launch", //请求配置类型
            // "miDebuggerServerAddress": "127.0.0.1:1234",
            "program": "${workspaceFolder}/libco/tests/libco-test-64", //可执行程序完整路径（包含程序名称）
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/libco/tests", //可执行程序完整路径（不包含程序名称）
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb", //gdb完整路径    "/usr/bin/gdb-multiarch"  
            "preLaunchTask": "build" // "build-all" // 第一次开始调试的任务  执行makefile进行构建项目，见task.json
        }
    ]
}